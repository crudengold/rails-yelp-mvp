<h1 style="font-weight: bold" class="mb-3"><%= @restaurant.name %></h1>
<h3 style="font-weight: bold"><%= @restaurant.category.capitalize %> restaurant</h3>
<h3><%= @restaurant.address %></h3>

<% @restaurant.reviews.each do |review| %>
  <div class="card my-2 p-3" style="background-color: lightgrey; box-shadow: 5px 5px #888888">
    <p><%= "⭐" * review.rating %></p>
    <p><%= review.content %></p>
  </div>
<% end %>

<div class="d-flex justify-content-between">
  <%= link_to "Back to restaurants list", restaurants_path , class: "btn btn-secondary col-5 mt-3" %>
  <%= link_to "Add new review", new_restaurant_review_path(@restaurant) , class: "btn btn-primary col-5 mt-3"%>
</div>
